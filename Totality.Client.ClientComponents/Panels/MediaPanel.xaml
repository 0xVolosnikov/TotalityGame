<we:AbstractPanel x:Class="Totality.Client.ClientComponents.Panels.MediaPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Totality.Client.ClientComponents"
             xmlns:we="clr-namespace:Totality.Client.ClientComponents.Panels"
             mc:Ignorable="d" Width="1200" Height="445">
    <Canvas x:Name="canvas1" Width="1200" Height="445">
        <Canvas.Background>
            <ImageBrush ImageSource="/Totality.Client.ClientComponents;component/Images/Media/mediaBackground.png"  Stretch="None"/>
        </Canvas.Background>
        <Canvas Height="43" Width="1200" Canvas.Top="-2">
            <Canvas Height="39" Canvas.Top="2" Width="1200" Background="White">
                <Label x:Name="label" Content="Средства Массовой Информации" Height="65" Width="1200" Foreground="Black" FontFamily="Impact" FontSize="34" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0" Canvas.Top="-15"/>
            </Canvas>
            <Canvas Height="6" Canvas.Top="41" Width="1200">
                <Canvas.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="#00000000" Offset="1"/>
                    </LinearGradientBrush>
                </Canvas.Background>
            </Canvas>
        </Canvas>
        <local:Button x:Name="NewsButton" Canvas.Left="682" Canvas.Top="92" imgUp="/Totality.Client.ClientComponents;component/Images/Media/NewsButton.png" imgDown="/Totality.Client.ClientComponents;component/Images/Media/NewsButtonDown.png" Width="284" Height="313" Cursor="Hand"/>
        <local:Button x:Name="PropagandaButton" Canvas.Left="269" Canvas.Top="92" imgUp="/Totality.Client.ClientComponents;component/Images/Media/PropButton.png" imgDown="/Totality.Client.ClientComponents;component/Images/Media/PropButtonDown.png" Width="277" Height="308" Cursor="Hand"/>
    </Canvas>
</we:AbstractPanel>
